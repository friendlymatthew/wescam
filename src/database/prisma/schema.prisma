generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoomType {
  LIVE
  DORMANT
}

enum MatchStatus {
  GUESS
  MATCH
}

model Room {
  id String @id @default(uuid())

  creatorId String
  creator   User   @relation("RoomCreators", fields: [creatorId], references: [id])

  crushId String

  creatorDisplayName String
  crushDisplayName   String

  roomType    RoomType
  matchStatus MatchStatus

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RogueUser {
  id    String @id @default(uuid())
  email String @unique

  @@index([email])
}

model User {
  id        String @id @default(uuid())
  name      String
  email     String @unique
  pronouns  String
  classYear Int

  createdRooms Room[] @relation("RoomCreators")
}
